<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kubi.timeruler.TimeRulerBarVertical
        android:id="@+id/timeBarVertical"
        android:layout_width="82dp"
        android:layout_height="match_parent"
        android:background="#141414"
        app:baselinePositionVertical="0.7"
        app:colorScaleBackgroundVertical="#141414"
        app:cursorBackgroundColorVertical="@android:color/holo_red_dark"
        app:drawCursorContentVertical="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:showCursorLineVertical="true"
        app:tickColorVertical="#ffffff"
        app:tickDirectionLeftVertical="false"
        app:tickValueColorVertical="#ffffff"
        app:tickValueOffsetVertical="-30dp"
        app:tickValueSizeVertical="10dp"
        app:videoAreaWidthVertical="20dp"
        app:videoAreaOffsetVertical="30dp" />

    <TextView
        android:id="@+id/tvDataVertical"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#ff00"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        
    <TextView
        android:id="@+id/btnZoomVertical"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="放大缩小刻度尺"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDataVertical" />
        
    <SeekBar
        android:id="@+id/seekBarVertical"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:max="1000"
        android:progress="500"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnZoomVertical" />

    <TextView
        android:id="@+id/btnAreaOffsetVertical"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="改变颜色区域偏移量"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarVertical" />

    <SeekBar
        android:id="@+id/seekAreaOffsetVertical"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAreaOffsetVertical" />

    <Button
        android:id="@+id/btnDirVertical"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="改变刻度线开口方向"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekAreaOffsetVertical" />

    <Button
        android:id="@+id/btnShowCursorVertical"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="是否显示浮标"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDirVertical" />
        
    <Button
        android:id="@+id/btnPlayVertical"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="模拟播放"
        app:layout_constraintLeft_toRightOf="@+id/timeBarVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowCursorVertical" />
        
</androidx.constraintlayout.widget.ConstraintLayout>
